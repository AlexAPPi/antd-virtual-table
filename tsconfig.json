{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "useDefineForClassFields": false,
    "downlevelIteration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "src",
    "declarationMap": true,
    "sourceMap": true,
    "sourceRoot": "src"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/hacked/**/*",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx"
  ]
}
